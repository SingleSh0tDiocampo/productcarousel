<% content_for :javascript do %>
  <script type="text/javascript">
    ShopifyApp.ready(function(){
      ShopifyApp.Bar.initialize({
        title: "Home",
        icon: "<%= asset_path('favicon.ico') %>"
      });
    });
  </script>
<% end %>
<div class="container">
<div class="row">
<div class="col s12"><h2>Products</h2></div>
<div class="col s6">
<ul>
  <% @products.each do |product| %>
    <li><%= link_to image_tag(product.images[0].src(:small), :class => 'img-thumb' ), "https://#{@shop_session.url}/admin/products/#{product.id}" %><%= link_to product.title, "https://#{@shop_session.url}/admin/products/#{product.id}", target: "_top" %></li>
  <% end %>
</ul>
</div>
</div>
</div>
